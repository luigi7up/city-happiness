<Page loaded="loaded" id="page-layout">
  <Page.actionBar>
    <ActionBar title="How do you feel, champ?"></ActionBar>
  </Page.actionBar>


  <StackLayout orientation="vertical" width="100%" height="100%">

    <AbsoluteLayout loaded="onSliderLoaded" orientation="vertical" width="100%" height="60%" verticalAlignment="top" horizontalAlignment="center" id="slider-container">
      <Label id="slidernob" horizontalAlignment="center" class="slidernob" marginLeft='44%' />
      <Label id="sliderbackground" horizontalAlignment="center" class="sliderbackground" marginLeft='48%' />
    </AbsoluteLayout>

    <Label text="{{status}}" class="value status-value"/>
    <Label text="{{semanticStatus}}" class="status-value" />

    <!-- <Label text="Label 2" width="100%" height="20%" backgroundColor="green" horizontalAlignment="center"/> -->

    <Button text="submit" tap="submitStatus" verticalAlignment="bottom" />

    <!-- <Label text="Label 3" width="50" height="50" backgroundColor="blue"/>
    <Label text="Label 4" width="50" height="50" backgroundColor="yellow"/> -->
  </StackLayout>

</Page>


